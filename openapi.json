{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Site API",
    "version": "1.0.0"
  },
  "paths": {
    "/update-site": {
      "post": {
        "summary": "Write or update a file on the live site",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                },
                "required": [
                  "filename",
                  "content"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}