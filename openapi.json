{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Website Control API",
    "version": "2.0.0",
    "description": "Full API to let a GPT create, edit, read, delete, upload, list, and build website files on the Heroku server."
  },
  "servers": [
    {
      "url": "https://gpt-site-live-78f2a81c6107.herokuapp.com",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/update-site": {
      "post": {
        "summary": "Create or update a text file in /public",
        "operationId": "updateSiteFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" },
                  "content": { "type": "string" }
                },
                "required": ["filename", "content"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "File written successfully." }
        }
      }
    },
    "/list-files": {
      "get": {
        "summary": "List all files in /public",
        "operationId": "listFiles",
        "responses": {
          "200": {
            "description": "List of files.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/read-file": {
      "post": {
        "summary": "Read a file from /public",
        "operationId": "readFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" }
                },
                "required": ["filename"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Returns file content." }
        }
      }
    },
    "/delete-file": {
      "post": {
        "summary": "Delete a file in /public",
        "operationId": "deleteFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" }
                },
                "required": ["filename"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "File deleted." }
        }
      }
    },
    "/upload-asset": {
      "post": {
        "summary": "Upload binary asset using base64",
        "operationId": "uploadAsset",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" },
                  "base64": { "type": "string" }
                },
                "required": ["filename", "base64"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Asset uploaded." }
        }
      }
    },
    "/trigger-build": {
      "post": {
        "summary": "Run the site build script",
        "operationId": "triggerBuild",
        "responses": {
          "200": { "description": "Build triggered." }
        }
      }
    }
  }
}
