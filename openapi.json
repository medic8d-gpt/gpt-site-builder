{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Website Control API",
    "version": "2.0.0",
    "description": "Full API for GPT to create, edit, delete, list, upload, and build files on the Heroku website."
  },
  "servers": [
    {
      "url": "https://gpt-site-live-78f2a81c6107.herokuapp.com",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/update-site": {
      "post": {
        "summary": "Create or update a text-based file in /public",
        "operationId": "updateSite",
        "requestBody": { "required": true },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/list-files": {
      "get": {
        "summary": "List all files in /public recursively",
        "operationId": "listFiles",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/read-file": {
      "post": {
        "summary": "Read the content of a file in /public",
        "operationId": "readFile",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/delete-file": {
      "post": {
        "summary": "Delete a file in /public",
        "operationId": "deleteFile",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/upload-asset": {
      "post": {
        "summary": "Upload binary file (images/audio/etc) using base64",
        "operationId": "uploadAsset",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/trigger-build": {
      "post": {
        "summary": "Trigger a site build (React/Vite/Static Generator)",
        "operationId": "triggerBuild",
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}
