{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Website Control API",
    "version": "3.0.0",
    "description": "Full API for GPT to create, edit, read, delete, upload, list, build, and execute Python scripts on the Heroku server."
  },
  "servers": [
    {
      "url": "https://gpt-site-live-78f2a81c6107.herokuapp.com",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/update-site": {
      "post": {
        "summary": "Create or update a text file in /public",
        "operationId": "updateSiteFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" },
                  "content": { "type": "string" }
                },
                "required": ["filename", "content"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/list-files": {
      "get": {
        "summary": "List all files in /public recursively",
        "operationId": "listFiles",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/read-file": {
      "post": {
        "summary": "Read a file from /public",
        "operationId": "readFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" }
                },
                "required": ["filename"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/delete-file": {
      "post": {
        "summary": "Delete a file in /public",
        "operationId": "deleteFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" }
                },
                "required": ["filename"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/upload-asset": {
      "post": {
        "summary": "Upload binary asset using base64",
        "operationId": "uploadAsset",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" },
                  "base64": { "type": "string" }
                },
                "required": ["filename", "base64"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/trigger-build": {
      "post": {
        "summary": "Run the site build script",
        "operationId": "triggerBuild",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/run-python": {
      "post": {
        "summary": "Save + execute a Python script inside a sandbox",
        "operationId": "runPython",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": { "type": "string" },
                  "code": { "type": "string" }
                },
                "required": ["filename", "code"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Execution result." } }
      }
    }
  }
}
